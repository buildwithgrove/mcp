{
  "name": "mcp-grove",
  "version": "1.0.0",
  "description": "MCP server for Grove's public endpoints for Pocket Network and documentation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "mkdir -p dist/config && cp src/config/*.json dist/config/",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "smoke": "node scripts/smoke.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "bin": {
    "mcp-grove": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "grove",
    "pocket-network",
    "endpoints"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "js-sha3": "^0.9.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  }
}
